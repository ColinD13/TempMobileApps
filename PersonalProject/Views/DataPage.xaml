<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PersonalProject.Views.DataPage"
             Title="DataPage">
    <VerticalStackLayout>
        <Button Text="Show my cards" Clicked="FillList"/>
        <CollectionView x:Name="cardList">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Label HorizontalTextAlignment="Center" Text="{Binding playerName}" Grid.Column="0"/>
                        <Label HorizontalTextAlignment="Center" Text="{Binding brand}" Grid.Column="1"/>
                        <Label HorizontalTextAlignment="Center" Text="{Binding brandSet}" Grid.Column="2" />
                        <Label HorizontalTextAlignment="Center" Text="{Binding cardID}" Grid.Column="3" />
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>